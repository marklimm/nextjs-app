// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Person {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  bio String
  imageUrl String?

  //  Person has a one-to-many relationship with Post
  //  does not exist in the DB, is used for prisma client
  posts Post[]

  //  Person has a many-to-many relationship with Tag
  tags Tag[]

  //  many-to-many self-relation - https://stackoverflow.com/questions/65162657/one-to-many-self-relation-in-prisma-schema and https://www.prisma.io/docs/concepts/components/prisma-schema/relations#many-to-many-self-relations
  friends Person[] @relation("friends")
  friendsRelation Person[] @relation("friends")
}

model Post {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  body String

  //  this field does NOT exist in the DB, is used for prisma client
  person Person @relation(fields: [personId], references: [id])

  //  this field DOES exist in the DB, this is the foreign key that connects Post with Person
  personId Int
}

model Tag {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  description String

  //  Tag has a many-to-many relationship with Person
  people Person[]

}